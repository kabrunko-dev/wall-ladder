{
  "manifest_version": 2,
  "version": "1.0.1",
  "author": "kabrunko-dev",
  "name": "Wall Ladder",
  "short_name": "Wall Ladder",
  "description": "An extension to enhance articles reading experience.",
  "icons": {
    "16": "src/assets/icons/favicon-16x16.png",
    "32": "src/assets/icons/favicon-32x32.png"
  },
  "browser_action": {
    "default_title": "Wall Ladder",
    "default_popup": "src/app/popup/popup.html",
    "default_icon": {
      "16": "src/assets/icons/favicon-16x16.png",
      "32": "src/assets/icons/favicon-32x32.png"
    }
  },
  "background": {
    "scripts": ["src/app/background.ts"]
  },
  "permissions": ["activeTab"]
}
