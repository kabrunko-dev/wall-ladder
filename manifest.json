{
  "manifest_version": 3,
  "version": "1.0.0",
  "author": "kabrunko-dev",
  "name": "Wall Ladder",
  "short_name": "Wall Ladder",
  "description": "An extension to breakthrough paywall on articles.",
  "icons": {
    "16": "src/assets/icons/favicon-16x16.png",
    "32": "src/assets/icons/favicon-32x32.png"
  },
  "action": {
    "default_popup": "src/app/popup/popup.html",
    "default_title": "Wall Ladder",
    "default_icon": {
      "16": "src/assets/icons/favicon-16x16.png",
      "32": "src/assets/icons/favicon-32x32.png"
    }
  },
  "background": {
    "service_worker": "src/app/background.ts"
  },
  "permissions": ["activeTab"]
}
